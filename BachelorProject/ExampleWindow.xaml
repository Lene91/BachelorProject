<Window x:Class="BachelorProject.ExampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExampleWindow" Height="500" Width="800">
    <Canvas Background="LightGray">
        <Border Margin="50" BorderBrush="Black" BorderThickness="2">
        <TextBlock Padding="50" Background="White" TextAlignment="Center" Width="700" FontSize="30" TextWrapping="WrapWithOverflow">
                Möchtest du jetzt einen Hinweis erhalten?
        </TextBlock>
        </Border>
        <Button Name="Btn1" FontSize="25" Width="100" Height="75" Margin="250,300"> Ja</Button>
        <Button Name="Btn2" FontSize="25" Width="100" Height="75" Margin="450,300"> Nein</Button>
    </Canvas>
</Window>
